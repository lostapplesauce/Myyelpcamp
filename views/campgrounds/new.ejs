<% layout('layouts/boilerplate') %>
    <!-- posting new campground to mongoDB -->
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <!-- added eenctype="multipart/form-data" to end of form to allow for multiple file uploads -->
            <!-- Need multer middleware to parse the multiple files sent -->
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required />
                </div>

                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" name="campground[image]" id="image" required>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" required />
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" required
                        id="description"></textarea>
                </div>
                <!-- not monitoring how many photos can be uploaded at a time -->
                <div class="mb-3">
                    <label for="">Upload Images</label>
                    <!-- Added custom-file to help display name of file using bs-custom-file-input -->
                    <div class="form-file custom-file">
                        <!-- name="image" has to match predefined name in Schema, so here it is image -->
                        <input type="file" class="form-file-input" id="image" name="image" multiple />
                        <label for="image" class="form-file-label">
                            <!-- had to add custom-file-label -->
                            <span class="form-file-text custom-file-label">Choose image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>
            </form>
            <a href="/campgrounds">All Campgrounds</a>
        </div>
    </div>